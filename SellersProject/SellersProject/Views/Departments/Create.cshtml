@model SellersProject.Models.DepartmentModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="col-form-label col-form-label-sm mt-4" for="inputSmall"></label>
                <input asp-for="Name" class="form-control form-control-sm" type="text" id="inputSmall"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary btn-sm" />
                <a asp-action="Index" type="button" class="btn btn-outline-primary btn-sm">Back to List</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
